{
  "name": "Order",
  "plural": "Orders",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "created": {
      "type": "date",
      "required": false,
      "defaultFn": "now"
    },
    "paymentMethod": {
      "type": "string",
      "required": true
    },
    "paymentFee": {
      "type": "number",
      "required": false,
      "default": 0,
      "postgresql": {
        "columnName": "paymentfee",
        "dataType": "real"
      }
    },
    "paymentToken": {
      "type": "string",
      "required": false
    },
    "total": {
      "type": "number",
      "required": true,
      "postgresql": {
        "columnName": "total",
        "dataType": "real"
      }
    }
  },
  "validations": [],
  "relations": {
    "tickets": {
      "type": "hasMany",
      "model": "Ticket",
      "foreignKey": "orderId"
    },
    "user": {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "makeOrder"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__tickets"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "processNameChangeFee"
    }
  ],
  "methods": {}
}
